{
  "name": "png-rw",
  "license": "MIT",
  "author": {
    "name": "Dirk Adler",
    "url": "https://dirx.dev"
  },
  "version": "1.1.0",
  "homepage": "https://github.com/dirx/png-rw#readme",
  "keywords": [
    "png",
    "encode",
    "decode",
    "exif",
    "icc-profile",
    "canvas",
    "capture",
    "blob"
  ],
  "type": "module",
  "main": "./dist/png-rw.umd.cjs",
  "module": "./dist/png-rw.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/png-rw.js",
      "require": "./dist/png-rw.umd.cjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "update-icc-profiles": "ts-node --esm resources/update-icc-profiles.ts > src/icc/compact-profiles.ts",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@types/pako": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "node-fetch": "^3.3.2",
    "pako": "^2.1.0",
    "semantic-release": "^21.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.3"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dirx/png-rw.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
